{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ES2020.Promise",
      "DOM"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "exclude": [
    "node_modules",
    "./types/**/*",
    "./built/**/*" // This is what fixed it!
  ]
}